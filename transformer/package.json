{
  "name": "packelyze-transformer",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "prepublishOnly": "pnpm build",
    "typecheck": "pnpm tsc -p .",
    "build": "rimraf lib dist && tsc -p tsconfig.build.json && rollup -c rollup.config.js",
    "test": "vitest --run",
    "test:ci": "pnpm test:cov && pnpm build",
    "test:cov": "vitest run --coverage",
    "perf": "PERF=1 vitest --run test/perf.test.ts"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mizchi/packelyze.git",
    "directory": "transformer"
  },
  "files": ["lib", "src", "dist"],
  "dependencies": {
    "colorette": "^2.0.20",
    "ts-clone-node": "^2.0.4",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.2.14",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-v8": "^0.33.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "rollup": "^3.26.2",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-ts": "^3.2.0",
    "ts-morph": "^19.0.0",
    "vite": "^4.4.2",
    "vitest": "^0.33.0"
  }
}
