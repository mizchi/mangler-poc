  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["../../node_modules/@types"],
