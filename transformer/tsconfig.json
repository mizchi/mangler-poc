{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": [
      "vitest/importMeta"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "test/**/*", "fixtures", "scripts/gen.mjs", "vitest.config.ts"],
  "exclude": ["lib", "dist"]
}
